{
  "name": "all-reports-api",
  "version": "0.0.1",
  "description": "all-reports-api",
  "license": "MIT",
  "engines": {
    "node": "9.4.0"
  },
  "scripts": {
    "build": "tsc",
    "heroku-postbuild": "yarn build",
    "test:watch": "NODE_ENV=test node ./scripts/test.js --forceExit # express server fails to end process",
    "test": "NODE_ENV=test jest --coverage --forceExit # express server fails to end process",
    "start": "node index.js",
    "watch": "tsc -w",
    "serve": "nodemon -e ts --watch src --exec \"yarn build && yarn start\" "
  },
  "dependencies": {
    "@nestjs/common": "^4.0.2",
    "@nestjs/core": "^4.0.2",
    "@nestjs/microservices": "^4.0.2",
    "@nestjs/swagger": "^1.1.4",
    "@nestjs/testing": "^4.0.2",
    "@nestjs/websockets": "^4.0.2",
    "@types/node": "^8.0.19",
    "bcrypt": "^1.0.3",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.4",
    "mockgoose-fix": "^7.3.6",
    "mongoose": "^5.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3",
    "swagger-ui-express": "^2.0.15",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.1",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/lodash": "^4.14.99",
    "@types/mongoose": "^5.0.1",
    "@types/passport-jwt": "^3.0.0",
    "@types/supertest": "^2.0.4",
    "jest": "^22.1.4",
    "nodemon": "^1.11.0",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "testArtifacts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
